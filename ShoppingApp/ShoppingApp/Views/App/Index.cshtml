@model IEnumerable<Product>
@{ 

    var specialProducts = Model.Take(4);

    var featureProducts = Model.Skip(4).Take(4);
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/img/shop11.jpg" alt="First slide" style="height:400px;">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/shop12.jpg" alt="Second slide" style="height:400px;">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/shop3.jpeg" alt="Third slide" style="height:400px;">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div style="margin-top:20px;">


    <h3 style="text-align:center;">Special Products</h3>

    @foreach (var item in specialProducts)

    {
        int imgId = item.Id;
        <div class="row">
            <div class="column">
                <div class="card">
                    <img src="~/img/@(imgId).jpg" )>
                    <p>@item.Title @item.Description</p>
                    <p style="float: left; font-weight: bold;">@item.Price</p>
                </div>
            </div>
        </div>

    }


    <h3 style="text-align:center;">Today's Deals under $25</h3>

    @foreach (var item in featureProducts)

    {
        int imgId = item.Id;
        <div class="row">
            <div class="column">
                <div class="card">
                    <img src="~/img/@(imgId).jpg" )>
                    <p>@item.Title @item.Description</p>
                    <p style="float: left; font-weight: bold;">@item.Price</p>
                </div>
            </div>
        </div>

    }



