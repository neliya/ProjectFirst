@model IEnumerable<Product>
@{ 

    var specialProducts = Model.Take(4);

    var featureProducts = Model.Skip(4).Take(4);
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/img/shop11.jpg" alt="First slide" style="height:550px;">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/shop12.jpg" alt="Second slide" style="height:550px;">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/shop3.jpeg" alt="Third slide" style="height:550px;">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container-fluid">


    <div class="col-md-12">
        <div class="col-md-12" style="padding:10px;">
            <h3 style="text-align:center;">Special Products</h3>
        </div>



        <div class="col-md-12" style="display:flex;">
            @foreach (var item in specialProducts)
            {
                int imgId = item.Id;
                <div class="card_one col-md-3" style="padding: 0px;">
                    <img src="~/img/@(imgId).jpg" style="width:100%; height: 294px;">
                    <p>@item.Title @item.Description</p><br/>
                    <p style="float: left; font-weight: bold;">@item.Price</p>
                </div>
            }
        </div>
    </div>

    <div class="col-md-12" style="margin:20px 0px;">
        <div class="col-md-12" style="padding:10px;">
            <h3 style="text-align:center;">Featured Products</h3>
        </div>
        <div class="col-md-12" style="display:flex;">
            @foreach (var item in featureProducts)
            {
                int imgId = item.Id;
                <div class="col-md-3 card_one" style="padding: 0px;">
                    <img src="~/img/@(imgId).jpg" style="width:100%; height: 294px;">
                    <p>@item.Title @item.Description</p><br />
                    <p style="float: left; font-weight: bold;">@item.Price</p>
                </div>
            }
        </div>


    </div>

</div>

  





