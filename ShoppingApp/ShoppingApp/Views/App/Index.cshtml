@model IEnumerable<Product>
@{ 

    var specialProducts = Model.Take(5);

    var featureProducts = Model.Skip(5).Take(5);
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/img/k2-_2010b325-aac6-46f8-af09-eda25dc1bb78.v1.jpg" alt="First slide" style="height:700px;">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/k2-_2010b325-aac6-46f8-af09-eda25dc1bb78.v1.jpg" alt="Second slide" style="height:700px;">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/k2-_2010b325-aac6-46f8-af09-eda25dc1bb78.v1.jpg" alt="Third slide" style="height:700px;">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div style="margin-top:20px;">


    <h3 style="text-align:center;">Special Products</h3>

    @foreach (var item in specialProducts)

    {
        <div class="card">
            <img src="jeans3.jpg" alt="Denim Jeans" style="width:100%">
            <h1>Tailored Jeans</h1>
            <p class="price">$19.99</p>
            <p>Some text about the jeans..</p>
            <p><button>Add to Cart</button></p>
        </div>
    }



</div>