@model IEnumerable<Product>

<h2>Shop</h2>
<p>Count: @Model.Count()</p>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3">
            <div class="border bg-light rounded p-1">
                <img src="~/img/this.jpg" class="img-fluid" alt="@p.Title" />
                <h3>@p.Category - @p.Size </h3>
                <ul class="product-props">
                    <li>Price: $@p.Price</li>
                    <li>Artist: @p.Title</li>
                    <li>Description: @p.Description</li>
                </ul>
                <button id="buyButton" class="btn btn-success">Buy</button>
            </div>

        </div>

    }
</div>


